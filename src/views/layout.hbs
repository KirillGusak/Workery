<body>
  <header>
    <div class="container">
      <header
        class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">

          </svg>
          <img name="logo" id="logo" src="/pictures/logo/bike3.png" alt="logo">
          {{!-- <span class="fs-4">Bike routes</span> --}}
        </a>


        <div class="col-md-3 text-middle">
          {{#if userId}}
          <a href="http://localhost:3000/profile" type="button" class="btn btn-primary">Profile</a>
          <a href="http://localhost:3000/addroute" type="button" class="btn btn-primary">Add route</a>
          {{/if}}
          <a href="http://localhost:3000/main" type="button" class="btn btn-primary">FAQs</a>
          <a href="http://localhost:3000/about" type="button" class="btn btn-primary">About</a>
          

        </div>


        <div class="col-md-3 text-end">
          {{#if userId}}
          <a href="http://localhost:3000/logout" type="button" class="btn btn-primary">Logout</a>
          {{else}}
          <a href="http://localhost:3000/signin" type="button" class="btn btn-primary">Login</a>
          <a href="http://localhost:3000/signup" type="button" class="btn btn-primary">Sign-up</a>
          {{/if}}
        </div>
      </header>
    </div>
  </header>

  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
