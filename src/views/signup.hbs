<form action="/signup" method="post">
  <div class="mb-3">
    <label for="exampleInputText1" class="form-label">Name</label>
    <input name="name" type="text" class="form-control" id="exampleInputText1" placeholder="John">
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input name="email" type="email" class="form-control" id="exampleInputEmail1" placeholder="john_smith@yahoo.com">
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="12345qwerty">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
