<div class="container">
  <div class="row">

  </div>
  <div class="row mt-5">
    <div class="col mt-5">
      <div id='map' class='map'></div>
      <script src="https://api-maps.yandex.ru/2.1/?apikey=75ff8d8f-55b5-40d7-afee-fd53548eedff&lang=ru_RU"></script>
      <script src="/application/map.js"></script>
      <script defer src="/application/client.js"></script>
    </div>
    <div class="col">
      <div class="list-group">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault">
            Sort routes by rating
          </label>
        </div>


        <div class="father">
          <div class="cards">
            {{#each routes}}
            <div class="list-group-item list-group-item-action d-flex gap-3 py-3">

              <img name="like" id="like" src="/pictures/logo/like1btn.png" alt="like" width="32" height="32"
                class="rounded-circle flex-shrink-0">

              <div class="d-flex gap-2 w-100 justify-content-between">
                <div>
                  <h6 class="mb-0" data-id="{{this.id}}" style="cursor:pointer">{{this.title}}</h6>
                  <p class="mb-0 opacity-75">Start: {{this.start}}<span style="padding-left: 30px">Finish: {{this.end}}
                    </span> </p>
                  <p class="mb-0 opacity-75">{{this.description}}</p>
                  <p><a href="http://localhost:3000/route/{{id}}">See more</a></p>
                </div>

                <small class="opacity-50 text-nowrap">{{this.rating}} likes</small>
              </div>
            </div>
            {{/each}}
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
