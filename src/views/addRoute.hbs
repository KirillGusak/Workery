<div class="row">

  <div class='col m-5'>
    <center>
    <div id='map' class='map'></div>
    <script src='https://api-maps.yandex.ru/2.1/?apikey=75ff8d8f-55b5-40d7-afee-fd53548eedff&lang=ru_RU'></script>
    {{!-- <script src='/application/map.js'></script> --}}
    <script defer src='/application/addRoute.js'></script>
    </center>
  </div>

  <div class="col">

    <main class="form-signin">

      <form action="/addRoute/Route" method="post">

        {{!-- <img class="mb-4" src="/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57"> --}}
        <center>
          <h1 style="padding-top: 50%" ; class="h3 mb-3 fw-normal">Add new route</h1>
        </center>

        <div class="form-floating">
          <input type="text" name="title" class="form-control" id="floatingInput" required>
          <label for="floatingInput">Route title</label>
        </div>
        <div class="form-floating">
          <input type="text" name="city" class="form-control" id="floatingPassword" required>
          <label for="floatingPassword">City</label>
        </div>
        <div class="form-floating">
          <input type="text" name="description" class="form-control" id="floatingPassword" required>
          <label for="floatingPassword">Description</label>
        </div>
        <div class="form-floating">
          <input type="text" name="start" class="form-control" id="floatingPassword">
          <label for="floatingPassword">Route start point
          </label>
        </div>
        <div class="form-floating">
          <input type="text" name="end" class="form-control" id="floatingPassword">
          <label for="floatingPassword">Route end point</label>
        </div>
        <div class="form-floating">
          <input type="text" name="length" class="form-control" id="floatingPassword" readonly="readonly">
          <label for="floatingPassword">Length</label>
        </div>
        <input type="hidden" name="rating" value="0">
        <button class="w-100 btn btn-lg btn-primary" type="submit">Add</button>

      </form>

    </main>

  </div>

</div>
